{
  "extends": "@repo/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
