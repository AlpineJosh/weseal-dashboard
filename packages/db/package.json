{
  "name": "@repo/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./src/server.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    },
    "./sage": {
      "types": "./dist/sage.d.ts",
      "default": "./src/sage.ts"
    },
    "./bit-systems": {
      "types": "./dist/bit-systems.d.ts",
      "default": "./src/bit-systems.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.4",
    "@t3-oss/env-nextjs": "^0.10.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.0",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.4",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^20.14.10",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.23.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
