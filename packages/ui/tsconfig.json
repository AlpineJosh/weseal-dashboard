{
  "extends": "@repo/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2022"],
    "jsx": "react-jsx",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@repo/ui/components/*": ["src/components/*"],
      "@repo/ui/lib/*": ["src/lib/*"]
    }
  },
  "include": ["./*.ts", "./src/**/*.{ts,tsx}"],
  "exclude": ["node_modules", ".storybook", ".turbo", "storybook-static"]
}
