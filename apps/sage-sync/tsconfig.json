{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "transform": "tsconfig-paths" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "incremental": true,
    "module": "esnext",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
