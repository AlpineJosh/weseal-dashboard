{
  "type": "module",
  "name": "sage-sync",
  "version": "1.0.0",
  "description": "",
  "main": "dist/sync.js",
  "bin": "dist/install-service.js",
  "scripts": {
    "clean": "rimraf dist node_modules/.cache/tsbuildinfo.json",
    "build": "pnpm clean && rollup -c",
    "package": "pkg . --targets node18-win-x64 --output dist/sage-sync.exe",
    "create-deployment": "node --loader ts-node/esm src/create-deployment.ts",
    "make": "pnpm build && pnpm package && pnpm create-deployment"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "config.json",
      "../../node_modules/node-windows/**/*",
      "../../node_modules/better-sqlite3/build/Release/better_sqlite3.node",
      "../../node_modules/odbc/build/Release/odbc.node"
    ],
    "outputPath": "dist",
    "targets": [
      "node18-win-x64"
    ],
    "compress": "GZip"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@repo/db": "workspace:*",
    "@types/better-sqlite3": "^7.6.12",
    "better-sqlite3": "^11.8.1",
    "drizzle-orm": "^0.32.2",
    "fs-extra": "^11.3.0",
    "node-gyp": "^10.3.1",
    "node-schedule": "^2.1.1",
    "node-windows": "1.0.0-beta.8",
    "odbc": "^2.4.9",
    "postgres": "^3.4.5",
    "sqlite": "^5.1.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.17.23",
    "@types/node-schedule": "^2.1.7",
    "@types/node-windows": "^0.1.6",
    "@types/sqlite3": "^3.1.11",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "catalog:",
    "pkg": "^5.8.1",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
