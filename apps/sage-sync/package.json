{
  "name": "sage-sync",
  "version": "1.0.0",
  "description": "",
  "main": "src/sync.ts",
  "bin": "dist/install-service.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist node_modules/.cache/tsbuildinfo.json",
    "build": "pnpm clean && tsc",
    "package": "pkg . --targets node18-win-x64 --output dist/sage-sync.exe",
    "create-deployment": "tsx src/create-deployment.ts"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "config.json",
      "node_modules/@repo/**/*"
    ],
    "outputPath": "dist",
    "options": [
      "experimental-modules"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@repo/db": "workspace:*",
    "drizzle-orm": "^0.32.0",
    "fs-extra": "^11.2.0",
    "node-gyp": "^10.2.0",
    "node-schedule": "^2.1.1",
    "node-windows": "1.0.0-beta.8",
    "odbc": "^2.4.9",
    "postgres": "^3.4.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.16.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.10",
    "@types/node-schedule": "^2.1.7",
    "@types/node-windows": "^0.1.6",
    "@types/sqlite3": "^3.1.11",
    "eslint": "catalog:",
    "pkg": "^5.8.1",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "tsx": "^4.17.0",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
